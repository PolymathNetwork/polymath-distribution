    "babel-preset-stage-2": "6.24.1",
    "babel-preset-stage-3": "6.24.1",
    "babel-register": "6.26.0",
    "bignumber.js": "4.0.2",
    "codecov": "2.3.0",
    "ethereumjs-testrpc": "4.1.1",
    "lodash": "4.17.4",
    "mocha-lcov-reporter": "1.3.0",
